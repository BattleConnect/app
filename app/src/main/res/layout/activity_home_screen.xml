<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"

    >
    <include
    android:id="@+id/toolbar"
    layout="@layout/toolbar" />



<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_below="@id/toolbar"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:divider="@drawable/vertical_divider_1"
    android:showDividers="middle">


    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="0.5"
        android:layout_height="fill_parent"
        android:layout_width="0dp">

        <com.cs495.battleelite.battleelite.SquareButton
            android:id="@+id/view_button"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:background="#86C745"
            android:text="Explore Data"
            android:textAllCaps="false"
            android:textSize="25sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:textColor="#FFFFFF" />

        <com.cs495.battleelite.battleelite.SquareButton
            android:id="@+id/input_button"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:text="Report Info"
            android:textAllCaps="false"
            android:textSize="25sp"
            android:background="#A436A5"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:textColor="#FFFFFF"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="0.5"
        android:layout_height="fill_parent"
        android:layout_width="0dp">

        <com.cs495.battleelite.battleelite.SquareButton
            android:id="@+id/alerts_button"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:text="Alerts"
            android:textAllCaps="false"
            android:textSize="25sp"
            android:background="#F2612A"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:textColor="#FFFFFF"/>

        <com.cs495.battleelite.battleelite.SquareButton
            android:id="@+id/map_button"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:text="Map"
            android:textAllCaps="false"
            android:textSize="25sp"
            android:background="#008DDE"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:textColor="#FFFFFF"/>

    </LinearLayout>

</LinearLayout>
</RelativeLayout>