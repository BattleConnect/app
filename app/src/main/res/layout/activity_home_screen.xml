<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home_screen">

    <Button
        android:id="@+id/view_button"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="121dp"
        android:text="View"
        android:background="#124679"
        android:textColor="#FFFFFF"/>

    <Button
        android:id="@+id/input_button"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/view_button"
        android:layout_marginEnd="24dp"
        android:text="Input"
        android:background="#124679"
        android:textColor="#FFFFFF"/>

    <Button
        android:id="@+id/alerts_button"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:layout_alignStart="@+id/input_button"
        android:layout_alignTop="@+id/map_button"
        android:text="Alerts"
        android:background="#124679"
        android:textColor="#FFFFFF"/>

    <Button
        android:id="@+id/map_button"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/view_button"
        android:layout_marginBottom="120dp"
        android:text="Map"
        android:background="#124679"
        android:textColor="#FFFFFF"/>
</RelativeLayout>