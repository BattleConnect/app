<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InputScreen">

    <Spinner
        android:id="@+id/inputTagSpinner2"
        style="@android:style/Widget.Spinner"
        android:layout_width="322dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="108dp"
        android:entries="@array/tagList"
        android:prompt="@string/TagPrompt"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="75dp">
    </Spinner>

    <Spinner
        android:id="@+id/inputTagSpinner"
        style="@android:style/Widget.Spinner"
        android:layout_width="322dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="192dp"
        android:entries="@array/conditionList"
        android:prompt="@string/ConditionPrompt"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="75dp">
    </Spinner>

    <EditText
        android:id="@+id/EditTextFeedbackBody"
        android:layout_width="322dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="116dp"
        android:hint="@string/CommentHint"
        android:inputType="textMultiLine"
        android:lines="5"></EditText>

    <TextView
        android:id="@+id/inputTitle"
        android:layout_width="117dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:gravity="center"
        android:text="@string/InputTitle"
        android:textAppearance="@style/TextAppearance.AppCompat.Title" />




</RelativeLayout>